<p id="notice"><%= notice %></p>

<h1>Current To-Do-Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Added on</th>
      <th>To be completed on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to "#{list.name}", list%> | </td>
        <td><%= list.added_on %> | </td>
        <td><%= list.to_be_completed_on %> | </td>
        <td><%= link_to 'Edit', edit_list_path(list) %> | </td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>
<p>
  <%= link_to 'Back to Homepage', root_path %>
</p>
